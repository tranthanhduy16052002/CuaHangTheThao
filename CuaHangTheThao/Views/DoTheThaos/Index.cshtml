@model CuaHangTheThao.Models.DothethaoGenreViewModel
@{
    ViewData["Title"] = "Đặt Hàng";
}

<h1>Đặt Hàng</h1>
<form asp-controller="DoTheThaos" asp-action="Index" method="get">
    <p>
        <select asp-for="DoTheThaoGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a asp-action="Create">Tạo Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoTheThaos[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoTheThaos[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoTheThaos[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoTheThaos[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoTheThaos[0].Rating)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DoTheThaos)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Đổi Hàng</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Đổi size</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa Đơn Hàng</a>
            </td>
        </tr>
        }
    </tbody>
</table>
